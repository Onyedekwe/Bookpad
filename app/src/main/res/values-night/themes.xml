<resources>
    <!-- Base application theme. -->
    <style name="Theme.LectureNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royaldarktheme</item>
        <item name="colorPrimaryVariant">@color/royaldarktheme</item>
        <item name="colorOnPrimary">@color/black_semi_transparent</item>
        <item name="colorAccent">#9E62B3</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0D120E</item>
        <item name="colorSecondaryVariant">#333333</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">#232826</item>
        <item name="backgroundColor">#333335</item>


        <item name="colorOnBackground">#A4B0BC</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="colorOnError">@color/royaldarktheme</item>
        <item name="indicatorColor">@color/dark_grey</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>


    <style name="DialoAnimations">

        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/royal</item>
        <item name="colorOnPrimary">@color/royal</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/royaldarktheme</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/transition_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/transition_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/transition_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/transition_out_right</item>
    </style>

</resources>