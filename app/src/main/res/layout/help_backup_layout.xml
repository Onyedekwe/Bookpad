<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backup &amp; Restore page"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text="This page allows users backup or restore a version of their note list at wish"
            android:textColor="?attr/colorOnSurface"
            android:textSize="17sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/backup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Click the 'Backup to location' button to backup and the 'Restore from location' button to restore. "
            android:textColor="?attr/colorOnSurface"
            android:textSize="17sp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Restoring backup sets the note list to a previous version during last backup. "
            android:textColor="?attr/colorOnSurface"
            android:textSize="17sp"
            android:textStyle="normal" />


        <Space
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>

</ScrollView>

